<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ChatController" prefHeight="600.0" prefWidth="800.0">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #a6275c;" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" text="â†">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="chatTitleLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Course Discussion Group">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="statusLabel" style="-fx-text-fill: white; -fx-opacity: 0.8;" text="Online">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
            <Label fx:id="connectionStatusLabel" style="-fx-text-fill: white; -fx-opacity: 0.8;" text="Connected">
               <font>
                  <Font size="12.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>

      <!-- Chat Messages Area -->
      <ScrollPane fx:id="chatScrollPane" fitToWidth="true" style="-fx-background-color: white; -fx-background: white;" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="chatContainer" alignment="TOP_CENTER" spacing="8.0" style="-fx-background-color: white;">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>

      <!-- Message Input Area -->
      <HBox alignment="CENTER" prefHeight="60.0" spacing="8.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="attachButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="35.0" style="-fx-background-color: transparent; -fx-text-fill: #a6275c; -fx-font-size: 16px;" text="ðŸ“Ž" />
            <TextField fx:id="messageTextField" promptText="Type a message..." style="-fx-background-color: #f5f5f5; -fx-background-radius: 18; -fx-border-radius: 18; -fx-padding: 8 12 8 12;" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="35.0" style="-fx-background-color: #a6275c; -fx-background-radius: 17.5; -fx-text-fill: white; -fx-font-size: 14px;" text="âž¤" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox> 